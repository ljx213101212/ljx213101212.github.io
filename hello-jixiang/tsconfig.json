{
    "include": [
        "src/*",
        "src/constants.ts",
        "src/global.d.ts",
        "global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "compilerOptions": {
        "types": ["vite/client"],
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "target": "es5",
        "baseUrl": "src"
    },
    "files": [
        "src/global.d.ts"
    ]
}